<web-app>
    <security-constraint>
        <display-name>REST Security Constraints</display-name>
        <web-resource-collection>
            <web-resource-name>REST</web-resource-name>
            <url-pattern>///rest/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>testRsRole</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>testRsRole</role-name>
    </security-role>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
</web-app>
